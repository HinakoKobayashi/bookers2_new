<div class="table">
  <table class="table table-hover">

    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
      <%= books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.user do %>
           <%= image_tag book.user.get_profile_image(50,50) %>
          <% end %>
        </td>

        <td>
          <%= link_to book_path do %>
          <%= book.title %>
          <% end %>
        </td>

        <td>
          <%= book.body %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>



