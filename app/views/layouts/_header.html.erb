<header>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to "Bookers", root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">

      <ul class="navbar-nav me-auto mb-2 ml-auto mb-lg-0">
       <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to user_path(current_user.id), class:'nav-link text-light' do %>
          <i class="fa-solid fa-house" style="color: #ffffff;"></i> Home
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_path, class:'nav-link text-light' do %>
          <i class="fa-solid fa-users" style="color: #ffffff;"></i> Users
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to books_path, class:'nav-link text-light' do %>
          <i class="fa-solid fa-book-open" style="color: #ffffff;"></i> Books
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete, class:'nav-link text-light' do %>
          <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i> Log out
          <% end %>
        </li>

       <% else %>
        <li class="nav-item">
          <%= link_to root_path, class:'nav-link text-light' do %>
          <i class="fa-solid fa-house" style="color: #ffffff;"></i> Home
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to about_path, class:'nav-link text-light' do %>
          <i class="fa-solid fa-link" style="color: #ffffff;"></i> About
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class:'nav-link text-light' do %>
          <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i> Sign up
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_session_path, class:'nav-link text-light' do %>
          <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i> Log in
          <% end %>
        </li>
       <% end %>
      </ul>

    </div>
  </div>
</nav>
</header>