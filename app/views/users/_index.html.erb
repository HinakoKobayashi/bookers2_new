<div class="table">
  <table class="table table-hover">

    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
      <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td class="text-decoration-none"><%= user.name %></td>
        <td><%= render "relationships/btn", user: user %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>